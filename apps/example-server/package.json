{
  "name": "example-server",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "build": "tsc -p .",
    "start:client": "tsx src/client.ts",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "generate": "zrpc generate --input ./src/index.ts --output ./src/generated.ts"
  },
  "dependencies": {
    "@avyaya/zrpc/core": "workspace:*",
    "@avyaya/zrpc/cli": "workspace:*",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "zod": "^4.1.6"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@avyaya/zrpc/eslint-config": "workspace:*",
    "@avyaya/zrpc/typescript-config": "workspace:*",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}